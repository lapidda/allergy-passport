# ===========================================
# Allergy Passport - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
DB_NAME=allergypassport
DB_USERNAME=allergypassport
DB_PASSWORD=change_this_to_a_secure_password

# Google OAuth2 Configuration
# Create credentials at: https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Set Authorized redirect URI to: http://localhost:8081/login/oauth2/code/google
#    (or your production domain, e.g., https://yourdomain.com/login/oauth2/code/google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret


export TRANSLATION_PROVIDER=google-cloud
export GOOGLE_CLOUD_PROJECT_ID=your-project-id
export GOOGLE_APPLICATION_CREDENTIALS=./translation-key.json
# Application URL (used for QR code generation)
# For local development: http://localhost:8081
# For production: https://yourdomain.com
APP_BASE_URL=http://localhost:8081

# Spring Profile (dev or prod)
SPRING_PROFILES_ACTIVE=prod
